<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="nativescript-spotify" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
        <ScrollView class="h-full">
          <StackLayout>
            <Button text="Connect" tap="{{ connect }}" isEnabled="{{ !loading }}" class="btn btn-primary"/>
            <Button text="Play" isEnabled="{{ authorized && !loading }}" tap="{{ play }}" class="btn btn-primary"/>
          </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>